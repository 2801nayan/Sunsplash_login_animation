<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetStart="@layout/activity_splash"
        motion:constraintSetEnd="@layout/activity_login"
        motion:duration="5000">
    <KeyFrameSet>
        <KeyPosition
            motion:framePosition="65"
            motion:keyPositionType="deltaRelative"
            motion:motionTarget="@+id/logo"
            motion:percentX="0"
            motion:percentY="0"
            />
        <KeyPosition
            motion:framePosition="65"
            motion:keyPositionType="deltaRelative"
            motion:motionTarget="@+id/logo_rays"
            motion:percentX="0"
            motion:percentY="0"
            />

        <KeyAttribute
            motion:framePosition="0"
            android:rotation="0"
            motion:motionTarget="@+id/logo_rays"
            />
        <KeyAttribute
            android:rotation="180"
            motion:framePosition="80"
            motion:motionTarget="@+id/logo_rays"
            />

        <KeyPosition
            motion:framePosition="75"
            motion:keyPositionType="deltaRelative"
            motion:motionTarget="@+id/cloud1"
            motion:percentX="0"
            motion:percentY="0"
            />
        <KeyPosition
            motion:framePosition="75"
            motion:keyPositionType="deltaRelative"
            motion:motionTarget="@+id/cloud2"
            motion:percentX="0"
            motion:percentY="0"/>

        <KeyPosition
            motion:framePosition="85"
            motion:keyPositionType="deltaRelative"
            motion:motionTarget="@+id/cloud1"
            motion:percentX="1"
            motion:percentY="1"
            />
        <KeyPosition
            motion:framePosition="85"
            motion:keyPositionType="deltaRelative"
            motion:motionTarget="@+id/cloud2"
            motion:percentX="1"
            motion:percentY="1"/>

        <KeyAttribute
            motion:motionTarget="@+id/Linlay1"
            motion:framePosition="75"
            android:alpha="0"
            />
        <KeyAttribute
            motion:motionTarget="@+id/Linlay1"
            motion:framePosition="85"
            android:alpha="1"
            />
        <KeyAttribute
            motion:motionTarget="@+id/forgotPass"
            motion:framePosition="75"
            android:alpha="0"
            />
        <KeyAttribute
            motion:motionTarget="@+id/forgotPass"
            motion:framePosition="85"
            android:alpha="1"
            />

        <KeyPosition
            motion:framePosition="75"
            motion:keyPositionType="deltaRelative"
            motion:motionTarget="@+id/register"
            motion:percentX="0"
            motion:percentY="0"/>
        <KeyPosition
            motion:framePosition="85"
            motion:keyPositionType="deltaRelative"
            motion:motionTarget="@+id/register"
            motion:percentX="0"
            motion:percentY="0"/>
    </KeyFrameSet>


    </Transition>


</MotionScene>